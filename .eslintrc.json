{
    "env": {
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-new": "off",
      "no-useless-constructor": "off"
    },
    "ignorePatterns": [
      "lib/**/*.d.ts",
      "lib/**/*.js",
      "test/**/*.d.ts",
      "test/**/*.js"
    ]
  }